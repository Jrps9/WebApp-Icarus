<div class="container-icarus">

  <h1 class="text-center">Tresorerie</h1>
  <h3 class="text-center">- Général-</h3>

  <section class="section">
    <p>Section pour le camembert</p>
    <p>Caisse Blanche -><%= Spent.totalWhiteSpent %></p>
    <p>Caisse Noir -><%= Spent.totalBlackSpent %></p>
    <p>Tresorerie Total -><%= Spent.totalBlackSpent + Spent.totalWhiteSpent %></p>
  </section>

  <section class="section">
    <div class="space-between">
      <h3>Capitaine <%= current_user.name %></h3><div class="space-between"><p>Voir</p><i class="fas fa-plus accordeon"></i></div>
    </div>
    <div class="scroll-list --hidden">
      <%= link_to new_spent_path, class: "button-icarus" do %><h4>Ajouter une dépense</h4><% end %>
      <%# <div class="button-icarus"><h4>Rembourser</h4></div> %>
      <%= link_to captain_path, class: "button-icarus" do %><h4>Mes dépenses</h4><% end %>
    </div>
  </section>

  <section class="section">
    <div class="space-between">
      <h3>L'Equipage</h3><div class="space-between"><p>Voir</p><i class="fas fa-plus accordeon"></i></div>
    </div>
    <div class="scroll-list --hidden">
      <%= link_to spents_path, class: "button-icarus" do %><h4>Toutes les dépenses</h4><% end %>
      <div class="button-icarus"><h4>Caisse de bord</h4></div>
    </div>
  </section>

</div>

<%= render "shared/spent-modal"  %>



